# Extract archives
extract() {
  local f="$1"; [[ -f "$f" ]] || { echo "file not found: $f"; return 1; }
  case "$f" in
    *.tar.bz2|*.tbz2) tar xjf "$f" ;;
    *.tar.gz|*.tgz)   tar xzf "$f" ;;
    *.tar.xz)         tar xJf "$f" ;;
    *.tar)            tar xf "$f"  ;;
    *.zip)            unzip -q "$f" ;;
    *.rar)            unrar x "$f" ;;
    *.7z)             7z x "$f" ;;
    *) echo "don't know how to extract '$f'"; return 2;;
  esac
}

